<div class="row my-5">
  <div class="col-11 col-md-8 m-auto form-container">
    <div class="card card-body">
      <h1 class="text-center mt-3">Login</h1>
      {{> message}}
      <form action="/users/login" method="POST">
        <div class="form-group">
          <label class="col-form-label" for="email">Email</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email" value="{{ email }}"
            required>
        </div>
        <div class="form-group mt-3">
          <label class="col-form-label" for="password">Password</label>
          <div class="d-flex align-items-center">
            <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password"
              value="{{ password }}" required>
            <i class="fas fa-eye-slash" style="margin-left: -35px; cursor: pointer;" id="togglePassword"></i>
          </div>
        </div>
        <button type="submit" class="btn btn-primary btn-block mt-4">Login</button>
        <a href="/auth/facebook" class="btn btn-info btn-block">Facebook Login</a>
        <a href="/auth/google" class="btn btn-outline-info btn-block">Google Login</a>
      </form>
      <p class="lead mt-4">
        No Account? <a href="/users/register">Register</a>
      </p>
    </div>
  </div>
</div>