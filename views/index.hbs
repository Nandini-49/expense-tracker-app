{{!-- Sort --}}
<div class="mt-4">
  <form action="/records" class="input-group">
    <select class="custom-select" name="filter" onchange="submit();">
        <option value="" selected>All</option>
      
        <option value="家居物業" {{#if (eq filter '家居物業')}}selected{{/if}}>家居物業</option>
        <option value="交通出行" {{#if (eq filter '交通出行')}}selected{{/if}}>交通出行</option>
        <option value="休閒娛樂" {{#if (eq filter '休閒娛樂')}}selected{{/if}}>休閒娛樂</option>
        <option value="餐飲食品" {{#if (eq filter '餐飲食品')}}selected{{/if}}>餐飲食品</option>
        <option value="其他" {{#if (eq filter '其他')}}selected{{/if}}>其他</option>
      
    </select>
  </form>
</div>


{{!-- Tototal amount --}}
<div class="mt-4 row">
  <div class="col-md-3">Total amount:</div>
  <div class="col-md-9 text-info" style="font-size: 5rem;">{{ totalAmount }}</div>
</div>

{{!-- Render list --}}
{{#each records}}
  <div class="row flex-md-nowrap py-2 record">
    {{!-- Icon --}}
    <div class="col-2 d-flex justify-content-center align-items-center">
      <i class="{{ this.categoryIcon }} fa-2x" style="
    color: #1dc5e0cf"></i>
    </div>
    {{!-- Name & date --}}
    <div class="col-3 pl-3">
      <h5 style="margin-bottom: 0;">{{ this.name }}</h5>
      <small>{{ this.date }}</small>
    </div>
    {{!-- Amount --}}
    <div class="col-4 d-flex align-items-center justify-content-end" style="font-weight: 400;font-size: 1.2rem;">
      {{ this.amount }}
    </div>
    {{!-- Buttons --}}
    <div class="col-3 d-flex justify-content-center align-items-center">
      <a  href="/records/{{ this._id }}/edit" class="mr-2"><i class="fas fa-edit icon-edit"></i></a>
      <form method="POST" action="/records/{{ this._id }}?_method=DELETE" style="display: inline;">
        <button type="submit" style="border: none;background-color: transparent;"><i class="fas fa-trash-alt icon-delete"></i></button>
      </form>
    </div>
  </div>
  {{/each}}
  <div class="my-4 d-flex justify-content-center">
    <a class="btn btn-info" href="/records/new">Add Expense</a>
  </div>
