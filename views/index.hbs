{{!-- Sort --}}
<div class="mt-4">
  <form action="/records" class="input-group">
    <select class="custom-select" name="filter">
        <option selected disabled>Choose a category...</option>
      {{#each categoryList}}
        <option value="{{ this.name }}">{{ this.name }}</option>
      {{/each}}
    </select>
    <div class="input-group-append">
      <button class="btn btn-outline-secondary" type="submit">Sort</button>
    </div>
  </form>
</div>


{{!-- Tototal amount --}}
<div class="mt-4 row">
  <div class="col-md-3">Total amount:</div>
  <div class="col-md-9" style="font-size: 5rem;">{{ totalAmount }}</div>
</div>

{{!-- Render list --}}
<ul class="list-group mt-2">
  {{#each records}}
    <li class="list-group-item">

      <div class="row">

        <div class="col-8 d-flex justify-content-between align-items-center">
          <div class="d-flex">
            <div class="mr-2"><i class="{{ this.categoryIcon }} fa-3x"></i></div>
            <div class="">
              <h5 style="margin-bottom: 0;">{{ this.name }}</h5>
              <small>{{ this.date }}</small>
            </div>
          </div>
          <div class="col-auto">{{ this.amount }}</div>
        </div>
        {{!-- Buttons --}}
        <div class="col-4 d-flex justify-content-end align-items-center">
          <a class="btn btn-outline-success mr-2" href="/records/{{ this._id }}/edit">Edit</a>
          <form method="POST" action="/records/{{ this._id }}?_method=DELETE" style="display: inline;">
            <button class="btn btn-outline-danger" type="submit">Delete</button>
          </form>
        </div>

      </div>
      
    </li>
  {{/each}}

  {{!-- Add Btn --}}
  <div class="mt-5 d-flex justify-content-center">
    <a class="btn btn-info" href="/records/new">Add Expense</a>
  </div>
</ul>
