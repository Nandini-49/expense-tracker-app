<div class="container py-5">

  <div class="row">
    <div class="col-12 col-lg-10 col-xl-8 mx-auto">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><i class="fas fa-edit"></i> Edit Expense</h5>
          <hr>

          <form class="row g-3" action="/records/{{ record._id }}?_method=PUT" method="POST">
            {{!-- Name --}}
            <div class="col-md-12 d-flex align-items-center justify-content-between mb-3">
              <label for="name" class="col-md-3 col-form-label">Name <span class="required">*</span> </label>
              <input type="text" name="name" class="form-control" id="name" value="{{ record.name }}" required style="width: 75%;">
            </div>
            {{!-- Date --}}
            <div class="col-md-12 d-flex align-items-center justify-content-between mb-3">
              <label for="date" class="col-md-3 col-form-label">Date <span class="required">*</span></label>
              <input type="date" name="date" class="form-control" id="date" value="{{ record.date }}" required style="width: 75%; cursor: pointer;">
            </div>
            {{!-- Category --}}
            <div class="col-md-12 d-flex align-items-center justify-content-between mb-3">
              <label for="category" class="col-md-3 col-form-label">Category <span class="required">*</span></label>
              <select class="custom-select" name="category" style="width: 75%;">
                <option value="家居物業" {{#if (eq record.category '家居物業')}}selected{{/if}}>家居物業</option>
                <option value="交通出行" {{#if (eq record.category '交通出行')}}selected{{/if}}>交通出行</option>
                <option value="休閒娛樂" {{#if (eq record.category '休閒娛樂')}}selected{{/if}}>休閒娛樂</option>
                <option value="餐飲食品" {{#if (eq record.category '餐飲食品')}}selected{{/if}}>餐飲食品</option>
                <option value="其他" {{#if (eq record.category '其他')}}selected{{/if}}>其他</option>
              </select>
            </div>
            {{!-- Amount --}}
            <div class="col-md-12 d-flex align-items-center justify-content-between mb-3">
              <label for="amount" class="col-md-3 col-form-label">Amount <span class="required">*</span></label>
              <input type="text" name="amount" class="form-control" id="amount" value="{{ record.amount }}" required style="width: 75%;">
            </div>
            {{!-- Button --}}
            <div class="col-12 d-flex justify-content-end">
              <button class="btn btn-success" type="submit">Save</button>
            </div>
          </form>
        
        </div>
      </div>
    </div>
  </div>
</div>